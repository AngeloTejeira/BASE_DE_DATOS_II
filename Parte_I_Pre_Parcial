  (5, 300.00, 'Success', '2020-03-01', 'Transferencia', 3, 2, 'Transferencia');


CREATE TABLE User (
  user_id INT PRIMARY KEY,
  name VARCHAR(50) NOT NULL,
  balance DECIMAL(10, 2) NOT NULL,
  password VARCHAR(50) NOT NULL
);

INSERT INTO User (user_id, name, balance, password)
