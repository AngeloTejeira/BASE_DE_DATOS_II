
CREATE TABLE Transaction (
  transaction_id INT PRIMARY KEY,
  amount DECIMAL(10, 2) NOT NULL,
  status VARCHAR(50) NOT NULL,
  timestamp DATE NOT NULL,
  reason VARCHAR(100) NOT NULL,
  from_id INT,
  to_id INT,
  category VARCHAR(50) NOT NULL,
  FOREIGN KEY (from_id) REFERENCES User(user_id),
  FOREIGN KEY (to_id) REFERENCES User(user_id)
);

INSERT INTO Transaction (transaction_id, amount, status, timestamp, reason, from_id, to_id, category)
VALUES
  (1, 100.00, 'Success', '2020-01-01', 'Transferencia', 1, 2, 'Transferencia'),
  (2, 50.00, 'Success', '2020-01-15', 'Pago de servicios', 1, 3, 'Pago de servicios'),
